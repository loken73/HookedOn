@model AnimalCardDTO

<div class="col-sm-6 col-lg-3">
    <div class="thumbnail">
        <div class="overlay-container">
            <div class="details-overlay"></div>
            <div class="button-wrapper">
                <a asp-controller="Store" asp-action="IndividualAnimal" asp-route-animalName="@Model.Name">View Details</a>
            </div>
            <img class="img-responsive animal-product" src=@Model.ImageUrl>
        </div>

        <div class="caption">
            <div class="row">
                <h4 class="col-xs-6">@Model.Name</h4><h4 class="col-xs-6 sell-price">$@Model.Price</h4> 
            </div>
            <div class="item-options">
                <div>
                    <h5 class="animal-cat">Care Level</h5>  
                    <p class="animal-fact">@Model.CareLevel</p>
                </div>
                <div>
                    <h5 class="animal-cat">Temperament</h5>
                    <p class="animal-fact bot">@Model.Temperament</p>
                </div>
            </div>
            <div class="add-cart-button-container">
                <a class="btn btn-default card-btn" asp-controller="Cart" asp-action="AddToShoppingCart" asp-route-animalId="@Model.AnimalId">Add to Cart <i class="material-icons">add_shopping_cart</i></a>
            </div>
        </div>
    </div>
</div>